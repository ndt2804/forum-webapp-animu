<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />
    <script>
        function showAddNewMenu() {
            var newMenu = document.getElementById('new-menu');
            newMenu.style.display = 'block';
        }
    </script>
  </head>
  <body>
    <div class="container d-flex justify-content-center">
        <div class="card mt-5 p-4">
            <div class="header-img">
                <div class="menu-icon">
                    <div class="dropdown">
                        <a href="#" class="dropbtn"><img src="/images/icons8-menu-64.png"></a>
                        <div class="dropdown-content">
                            <ul>
                              {{#if loggedIn}}
                                    <li><a href="#" onclick="showAddNewMenu();return false;">Add new post</a></li>
                                    <li><a href="/logout">Logout</a></li>
                                {{else}}
                                    <li><a href="/login">Login</a></li>
                                {{/if}}
                            <ul>
                        </div>
                    </div>
                </div>
                <div class="app-icon"><a href="/"><img src="/images/forum_logo.png"></a></div>
            </div>
            
            {{#if loggedIn}}
            <div class="login-box">
                <div id="new-menu">
                    <h2 class="page-title">New Post</h2>
                    <form action="/menu/new" method="POST">
                        <div class="menu-title"><input type="text" name="menuName" placeholder="Title"></div>
                        <div class="menu-icon-link"><input type="text" name="menuIcon" placeholder="iamge"></div>
                        <div class="menu-url"><input type="text" name="menuUrl" placeholder="description"></div>
                        <div class="menu-btn"><button type="submit" class="btn btn-primary">Save</button></div>
                    </form>
                </div>
            </div>
            {{/if}}
